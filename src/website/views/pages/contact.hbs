<!-- Contact -->
<section class="section-wrap-mp contact" id="contact">
  <div class="container">

    <div class="row">

      <div class="col-md-4">
        <h5>Get in Touch</h5>

        <div class="contact-item">
          <div class="contact-icon">
            <i class="icon icon-Pointer"></i>
          </div>
          <h6>Address</h6>
          <p>United Kingdom,
            <br> West Wales</p>
        </div>
        <!-- end address -->

        <div class="contact-item">
          <div class="contact-icon">
            <i class="icon icon-Phone"></i>
          </div>
          <h6>Call Me</h6>
          <span>Email me to setup a call</span>
        </div>
        <!-- end phone number -->

        <div class="contact-item">
          <div class="contact-icon">
            <i class="icon icon-Mail"></i>
          </div>
          <h6>E-mail</h6>
          <a href="mailto:contact@nicholasmordecai.co.uk">contact@nicholasmordecai.co.uk</a>
        </div>
        <!-- end email -->

      </div>

      <div class="col-md-8">
        <form id="contact-form" action="/api/contact-form/" method="POST">
          <input type="hidden" name="_csrf" value="{{csrfToken}}">
          <div class="row contact-row">
            <div id="msg" class="message text-danger" style="text-align: left; padding-left: 1rem; color: #a94442;">
            </div>
            <div class="col-md-6 contact-name">
              <input name="name" id="name" type="text" placeholder="Name*" required>
            </div>
            <div class="col-md-6 contact-email">
              <input name="mail" id="mail" type="email" placeholder="E-mail*" required>
            </div>
          </div>

          <input name="subject" id="subject" type="text" placeholder="Subject*" required>

          <textarea name="comment" id="comment" placeholder="Message*" required></textarea>

          <div class="g-recaptcha" data-sitekey="6LfQVGIUAAAAACaafq54JjkRBMZWnKi8s-zLrxml"
            style="padding-bottom: 2rem;"></div>

          <input type="submit" class="btn btn-lg btn-color btn-submit" value="Send Message" id="submit-message">
        </form>
      </div>
      <!-- end col -->

    </div>
  </div>
</section>

<div class="row" style="margin-bottom: 4rem;">
  <div class="column text-center">
    <a href="https://appleid.apple.com/auth/authorize?response_type=code&client_id=com.nicholasmordecai.epic-word-adventure&redirect_uri=https%3A%2F%2Fnicholasmordecai.co.uk%2Fcallback&scope=email" style="font-size: 1em;" class="btn btn-lg"><span class="mr-2">
        <i class="fa fa-apple" aria-hidden="true"></i>
      </span>Sign in with Apple</a>
  </div>
</div>